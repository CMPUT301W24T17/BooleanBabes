<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/container_home_page_attendees"
  android:layout_width="match_parent"
  android:layout_height="807dp"
  android:background="@drawable/container_home_page_attendees">

  <TextView
        android:id="@+id/text_notifications"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="360dp"
        android:layout_gravity="top|left"
        android:gravity="left|center_vertical"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Notifications:"
        android:textColor="#FF000000"
        android:textSize="18sp" />

  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="8dp">

    <ImageView
        android:id="@+id/attendee_home_event_poster"
        android:layout_width="330dp"
        android:layout_height="204dp"
        android:layout_gravity="top|start"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/img_career_fairs_web_banner" />

    <ImageView
        android:id="@+id/location_pin_attendee_home"
        android:layout_width="17.5dp"
        android:layout_height="25dp"
        android:layout_gravity="top|left"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:scaleType="centerInside"
        android:src="@drawable/location_pin" />

    <TextView
        android:id="@+id/attendee_home_event_location"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_gravity="top|left"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="-23dp"
        android:gravity="left|center_vertical"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:singleLine="true"
        android:text="CCIS, UofA"
        android:textColor="#FF000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/attendee_home_event_detail"
        android:layout_width="310dp"
        android:layout_height="48dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="28dp"
        android:gravity="left|top"
        android:includeFontPadding="false"
        android:lineHeight="24dp"
        android:text="ðŸ‘‹ Welcome to Career Launchpad 2024! ðŸš€\n"
        android:textColor="#FF000000"
        android:textSize="20dp" />
  </LinearLayout>

    <!-- RecyclerView for notifications -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notificationsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"
        android:clipToPadding="false"
        android:paddingBottom="110dp" />


  <ImageView
      android:id="@+id/bottom_actionbar"
      android:layout_width="395dp"
      android:layout_height="74dp"
      android:layout_gravity="top|start"
      android:layout_marginStart="-2dp"
      android:layout_marginTop="682dp"
      android:background="@drawable/bottom_actionbar"
      android:scaleType="centerInside" />

  <ImageView
      android:id="@+id/profile_attendee"
      android:layout_width="38dp"
      android:layout_height="38dp"
      android:layout_marginStart="52.38dp"
      android:layout_marginTop="700dp"
      android:layout_marginEnd="314.43dp"
      android:layout_marginBottom="30.81dp"
      android:scaleType="centerInside"
      android:src="@drawable/profile"
      android:contentDescription="Button to view attendee's projile" />

  <ImageView
      android:id="@+id/camera_scan_attendee"
      android:layout_width="38dp"
      android:layout_height="38dp"
      android:layout_marginStart="172dp"
      android:layout_marginTop="700dp"
      android:scaleType="centerInside"
      android:src="@drawable/home_white"
      android:contentDescription="Button to view attendee's home page" />

  <!--  TODO: Figure out a way to replace show list icon, with the white one to show current tab -->
  <ImageView
      android:id="@+id/event_list"
      android:layout_width="38dp"
      android:layout_height="38dp"
      android:layout_marginStart="300dp"
      android:layout_marginTop="700dp"
      android:layout_marginBottom="0.05dp"
      android:scaleType="centerInside"
      android:src="@drawable/event_list"
      android:contentDescription="Button to show a list " />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="20dp"
      android:gravity="left|center_vertical"
      android:includeFontPadding="false"
      android:maxLines="1"
      android:singleLine="true"
      android:text=""
      android:textColor="#FF4E4B66"
      android:textSize="13dp" />

</FrameLayout>