<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<!--    TODO: The commented segment to be deleted and activity main to be updated once figma uis are imported-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <Button
            android:id="@+id/button_create_new_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/demo_button_create_new_event"
            tools:ignore="MissingConstraints"/>

        <Button
            android:id="@+id/button_admin_event_browse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Admin Event List"
            tools:ignore="MissingConstraints"/>


        <Button
            android:id="@+id/button_attendee_event_browse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Attendee Event List"
            tools:ignore="MissingConstraints"/>

        <Button
            android:id="@+id/button_attendee_event_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Attendee Event Info"
            tools:ignore="MissingConstraints"/>

        <Button
            android:id="@+id/button_attendee_event_info_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Attendee Event Info Sign Up"
            tools:ignore="MissingConstraints"/>
        <Button
            android:id="@+id/button_edit_user_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit User Profile"
            tools:ignore="MissingConstraints"
            />
        <Button
            android:id="@+id/button_admin_browse_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Browse Profile"
            tools:ignore="MissingConstraints"
            />
        <Button
            android:id="@+id/button_admin_browse_images"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Browse Images"
            tools:ignore="MissingConstraints"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>