<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/container_cards"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- Left side image/icon -->
    <ImageView
        android:id="@+id/image_banner"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_banner" />

    <!-- Right side content container -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="8dp">

        <!-- Event title -->
        <TextView
            android:id="@+id/text_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="start"
            android:text="Career Fair 2023"
            android:textColor="#FF000000"
            android:textSize="20sp" />

        <!-- Event date and location container -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Event date icon -->
            <ImageView
                android:id="@+id/image_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/image_icon" />

            <!-- Event date -->
            <TextView
                android:id="@+id/text_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feb 8"
                android:textSize="17sp"
                android:textColor="#FF4E4B66"
                android:paddingStart="8dp"/>

            <!-- Event location icon -->
            <ImageView
                android:id="@+id/image_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/image_map"
                android:paddingStart="16dp"/>

            <!-- Event location -->
            <TextView
                android:id="@+id/text_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CCIS, UofA"
                android:textSize="17sp"
                android:textColor="#FF4E4B66"
                android:paddingStart="8dp"/>
        </LinearLayout>

        <!-- Event description -->
        <TextView
            android:id="@+id/text_lorem_ipsum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Career fairs are a great way to connect with U of A students..."
            android:textSize="16sp"
            android:textColor="#FF4E4B66"
            android:gravity="start"/>
    </LinearLayout>

</LinearLayout>
